<h1>Lost Password Email</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @user, url: request_password_reset_login_path do |f| %>
      <% fi = FormItem.new(f) %>

      <%= fi.text_field(:email, 'Reset Email') %>
      <%= fi.submit_with_cancel('Send Password Reset Email') %>
    <% end %>
  </div>
</div>