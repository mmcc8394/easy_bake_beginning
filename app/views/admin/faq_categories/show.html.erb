<section class="section-white container">
  <h1>FAQ Category: <%= @faq_category.title %></h1>

  <div class="mb-2 mr-5 text-right">
    <%= action_link(admin_faq_categories_path, 'list-unordered', 'faq category list') %>
    <%= action_link(edit_admin_faq_category_path(@faq_category), 'pencil', 'edit category') %>
    <% if policy(@faq_category).destroy? %>
      <%= action_link_delete(admin_faq_category_path(@faq_category)) %>
    <% end %>
  </div>

  <%= render 'admin/faqs/listing' %>
</section>